<UserControl x:Class="TwentyFortyEight.View.GameLossScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwentyFortyEight.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">


    <Canvas Background="#FFBBADBD">
        <Label Content="GAME OVER" Background="#00000000" Foreground="#FFD83D3D" FontWeight="Bold" FontFamily="Algerian" FontSize="72" Canvas.Left="15" Canvas.Top="99" Width="420"/>
        <Label Content="Your score:" Canvas.Left="94" Canvas.Top="188" FontFamily="Rockwell Extra Bold" FontSize="24" Background="#FF4763DE" Foreground="{Binding TextColor}"/>
        <Label x:Name="Sas" Content="{Binding Score}" FontFamily="Rockwell Extra Bold" FontSize="24" Background="#FF4763DE" Foreground="{Binding TextColor}" Canvas.Left="284" Canvas.Top="188"/>

        <Button Content="Close" Command="{Binding Close}" FontSize="40" Background="#FFD8386B" Foreground="{Binding TextColor}" Canvas.Left="60" Canvas.Top="289" Height="66" Width="325" FontFamily="Magneto"/>
    </Canvas>
</UserControl>
